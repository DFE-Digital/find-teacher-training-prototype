{% extends "_layouts/default.njk" %}

{% set title = "Postgraduate teacher training" %}

{% from "govuk/components/button/macro.njk" import govukButton %}



{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">Find teacher training courses</h1>
      <p class="govuk-body-l">Where would you like to teach?</p>
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      <h2 class="govuk-heading-m">Primary schools</h2>
      <p>Ages 5 to 11</p>

      {{ govukButton({
        text: "Find primary courses",
        isStartButton: true,
        href: "/primary",
        classes: "app-button--start-smaller"
      }) }}
    </div>

    <div class="govuk-grid-column-one-half app-grid-column-one-half--border-left">
      <h2 class="govuk-heading-m">Secondary schools</h2>
      <p>Ages 11 to 18</p>
      {{ govukButton({
        text: "Find secondary courses",
        isStartButton: true,
        href: "/secondary",
        classes: "app-button--start-smaller"
      }) }}
    </div>
  </div>

  <div class="govuk-grid-row govuk-!-margin-top-8">
    <div class="govuk-grid-column-one-third">
      <h2 class="govuk-heading-s">Nurseries</h2>
      <p>Ages 0 to 5</p>
      <p class="govuk-body"><a href="/early-years" class="govuk-link">Teaching early years</a></p>
    </div>
    <div class="govuk-grid-column-one-third app-grid-column-one-third--border-left">
      <h2 class="govuk-heading-s">6th forms and colleges</h2>
      <p>Ages 16 to 18</p>
      <p class="govuk-body"><a href="/early-years" class="govuk-link">Teaching further education</a></p>
    </div>
    <div class="govuk-grid-column-one-third app-grid-column-one-third--border-left">
      <h2 class="govuk-heading-s">Universities</h2>
      <p>Ages 18+</p>
      <p class="govuk-body"><a href="/early-years" class="govuk-link">Teaching in Universities</a></p>
    </div>
  </div>

  <div class="govuk-grid-row govuk-!-margin-top-8">
    <div class="govuk-grid-column-full app-grid-column--grey">
      <h3 class="govuk-heading-s">Canâ€™t decide?</h3>
      <p class="govuk-body">Our teacher training advisers can help you explore which type of teaching is right for you.</p>
      <p class="govuk-body"><a href="#" class="govuk-link">Speak to a teacher training adviser</a></p>
    </div>
  </div>
{% endblock %}
