{% extends "_layouts/default.njk" %}

{% set title = "Find teacher training courses" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <form action="/search" method="post">
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: [{
            text: error.error_message,
            href: "#location"
          }]
        }) if error }}

        <h1 class="govuk-heading-l">{{ title }}</h1>
        <h2 class="govuk-heading-m">Choose a city or town</h2>
        <ul class="govuk-grid-row govuk-list">
        {% for area in data.areas | selectattr("showOnHomepage") %}
          <li class="govuk-grid-column-one-third govuk-!-margin-bottom-1">
            {% if area.name == "London" %}
              <a href="/london">{{ area.name }}</a>
            {% else %}
              <a href="/subject?q={{ area.shortName or area.name }}">{{ area.shortName or area.name }}</a>
            {% endif %}
          </li>
        {% endfor %}
        </ul>

        <p><a href="#">All courses in England</a></p>

        <p class="govuk-hint">or</p>

        {{ govukInput({
          classes: "govuk-!-width-three-quarters",
          label: {
            classes: "govuk-label--m",
            text: "Enter a place name, postcode or training provider"
          },
          id: "q",
          name: "q"
        }) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>

{% endblock %}
