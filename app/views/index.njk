{% extends "_layouts/default.njk" %}

{% set title = "Find courses by location or by training provider" %}

{% block backLink %}
  {{ govukBackLink({
    text: backLink.text,
    href: backLink.href
  }) if backLink }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action="/search" method="post">
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: [{
            text: error.error_message,
            href: "#postcode-town-or-city"
          }]
        }) if error }}

        {% set postcodeHtml %}
          {{ govukInput({
            id: 'location',
            label: {
              text: "Postcode, town or city"
            },
            value: data.locationName,
            autocomplete: 'off',
            name: "locationName",
            formGroup: {
              classes: "govuk-!-margin-bottom-0"
            }
          }) }}
          <div id="location-autocomplete" class="govuk-body"></div>
        {% endset %}

        {% set providerHtml %}
          {{ govukInput({
            label: {
              text: "School, university or other training provider"
            },
            hint: {
              text: "Enter the name or provider code"
            },
            value: data.providerName,
            id: "providerName",
            name: "providerName"
          }) }}
        {% endset %}

        {{ govukRadios({
          name: "q",
          fieldset: {
            legend: {
              text: title,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: [{
            value: "location",
            text: "By city, town or postcode",
            checked: (data.q == "location"),
            conditional: {
              html: postcodeHtml
            }
          }, {
            value: "england",
            text: "Across England",
            checked: (data.q == "england")
          }, {
            divider: "or"
          }, {
            value: "provider",
            text: "By school, university or other training provider",
            checked: (data.q == "provider"),
            conditional: {
              html: providerHtml
            }
          }]
        }) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
