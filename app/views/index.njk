{% extends "_layouts/default.njk" %}

{% set title = "Find teacher training courses" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <form action="/subject">
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: [{
            text: error.error_message,
            href: "#location"
          }]
        }) if error }}

        <h1 class="govuk-heading-l">{{ title }}</h1>
        <h2 class="govuk-heading-m">Choose a city or town</h2>
        <ul class="govuk-grid-row govuk-list">
        {% for area in data.areas | selectattr("showOnHomepage") %}
          <li class="govuk-grid-column-one-third govuk-!-margin-bottom-1"><a href="/subject?location={{ area.shortName or area.name }}">{{ area.shortName or area.name }}</a></li>
        {% endfor %}
        </ul>

        <p class="govuk-hint">or</p>

        {{ govukInput({
          classes: "govuk-!-width-three-quarters",
          label: {
            classes: "govuk-label--m",
            text: "Enter a place name or postcode"
          },
          id: "location",
          name: "location"
        }) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>

{% endblock %}
