{% macro screenshot(title, id, thumbnail, full, text = '') %}
<div class="design-history-item">
  <h2 class="heading-large" id="{{ id }}">{{ title }}</h2>
  <div class="grid-row">
    <div class="column-two-thirds design-history-screenshot">
      <a href="{{ full }}">
        <img src="{{ thumbnail }}" width="630" alt="Screenshot of {{ title }}" />
      </a>
    </div>
    <div class="column-one-third design-history-text">
      {{ text | safe }}
    </div>
  </div>
</div>
{% endmacro %}

{% macro textbox(id, label, helpText = false) %}
<div class="form-group">
  <label class="form-label-bold" for="{{id}}">{{label}}</label>
  {% if helpText %}
    <span class="form-hint">{{helpText}}</span>
  {% endif %}
  <input class="form-control" name="{{id}}" type="text" id="{{id}}" value="{{ value(id) }}">
</div>
{% endmacro %}

{% macro radio(id, label, groupName, target, value) %}
  <div class="multiple-choice" data-target="{{target}}">
    <input id="{{id}}" type="radio" name="{{groupName}}" value="{{value}}">
    <label for="{{id}}" class="bold">{{label}}</label>
  </div>
{% endmacro %}

{#
  field:
    name:
    text:
    more:
#}
{% macro radioGroup(name, fields) %}
  {% for field in fields %}
    <div class="multiple-choice" data-target="radio-part-{{ loop.index }}-extra">
      <input required
        id="radio-part-{{ loop.index }}"
        type="radio"
        name="{{ name }}"
        value="{{ field.name }}"
        {{ checked(name, field.name) }}
      >
      <label for="radio-part-{{ loop.index }}">
        <span {% if field.text %}class="bold"{% endif %}>{{ field.name }}</span>
        {% if field.text %}
          {{ field.text | safe }}
        {% endif %}
      </label>
    </div>
    {% if field.more %}
      <div class="panel panel-border-wide js-hidden" id="radio-part-{{ loop.index }}-extra">
        {{ field.more | safe }}
      </div>
    {% endif %}
  {% endfor %}
{% endmacro %}

{% macro checkboxGroup(name, fields) %}
  {% for field in fields %}
    <div class="multiple-choice" data-target="checkbox-part-{{ loop.index }}-extra">
      <input
        id="checkbox-part-{{ loop.index }}"
        type="checkbox"
        name="{{ name }}"
        value="{{ field.name }}"
        {{ checked(name, field.name) }}
      >
      <label for="checkbox-part-{{ loop.index }}">
        <span class="bold">{{ field.name }}</span>
        {% if field.text %}
          <br />{{ field.text | safe }}
        {% endif %}
      </label>
    </div>
    {% if field.more %}
      <div class="panel panel-border-wide js-hidden" id="checkbox-part-{{ loop.index }}-extra">
        {{ field.more | safe }}
      </div>
    {% endif %}
  {% endfor %}
{% endmacro %}

