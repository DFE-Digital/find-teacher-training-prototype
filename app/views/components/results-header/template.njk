{% if (not params.mapView) %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      <p class="govuk-body search-results__count" data-qa="course-count">{{ params.countString }} found</p>
    </div>
    <div class="govuk-grid-column-one-half">
      <p class="govuk-body search-results__new-search"><a href="/start/location">New search</a></p>
    </div>
  </div>
{% endif %}
<div class="search-results-header">
  <div class="govuk-grid-row">
  {% if value("location") == "Across England" %}
    <div class="govuk-grid-column-one-half">
      <p class="govuk-body govuk-!-margin-bottom-0">Sorted by training provider</p>
    </div>
  {% elseif (not params.mapView) %}
    <div class="govuk-grid-column-full">
      <p class="govuk-body govuk-!-margin-bottom-0">Sorted by distance. <a href="/results?map=yes">View on a map</a></p>
    </div>
  {% endif %}
  </div>
  {% if mapView %}
    <p>{{ params.countString }} found within 50 miles</p>
    <ul class="govuk-list">
      <li><a href="/results">View results as a list</a></li>
      <li><a href="/start/location">New search</a></li>
    </ul>
  {% endif %}
</div>
