{% extends "_layouts/default.njk" %}

{% set title = "Which secondary subjects do you want to teach?" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: "/age-groups"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% if showError %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: [
            {
              text: "Select which courses would you like to find",
              href: "#secondary-subjects"
            }
          ]
        }) }}
      {% endif %}

      <form action="/secondary-subjects" method="post" accept-charset="utf-8" novalidate>

        {% set items = [] %}
        {% for subject in data.subjectOptions %}
          {% if subject.ageGroup === "secondary" %}
            {% set items = items | push({
              text: subject.text,
              value: subject.value,
              hint: {text: subject.hint},
              checked: (data.subjects and data.subjects.includes(subject.value))
            }) %}
          {% endif %}
        {% endfor %}

        {{ govukCheckboxes({
          idPrefix: "secondary-subjects",
          name: "subjects",
          fieldset: {
            legend: {
              text: title,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          hint: {
            text: "Select all subjects you are interested in teaching"
          },
          errorMessage: {
            text: "Select at least one secondary subject you want to teach"
          } if showError,
          items: (items | sort(attribute="text") )
        }) }}

        {{ govukButton({
          text: "Find courses"
        }) }}

      </form>

    </div>
  </div>
{% endblock %}
