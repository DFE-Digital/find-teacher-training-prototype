{% extends "_layouts/default.njk" %}

{% set title = "Which secondary subjects are you interested in?" %}

{% block pageNavigation %}
  {{ govukBackLink({href: "/age-group"}) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{ title }}</h1>

      <form action="/results">
        {% set items = [] %}
        {% for subject in data.subjectOptions %}

          {% if subject.ageGroup === "secondary" %}
            {% set items = items | push({
              text: subject.text,
              value: subject.value,
              hint: {text: subject.hint},
              checked: (data.subjects and data.subjects.includes(subject.value))
            }) %}
          {% endif %}
        {% endfor %}

        {{ govukCheckboxes({
          fieldset: {
            legend: {
              text: subject.text,
              classes: "govuk-fieldset__legend--m"
            }
          },
          hint: {
            text: "Select all subjects you are interested in teaching"
          },
          name: "subjects",
          items: (items | sort(attribute="text") )
        }) }}


        {{ govukButton({
          text: "Find courses"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
