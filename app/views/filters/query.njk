{% extends "_layouts/default.njk" %}

{% set title = "Enter a place name, postcode or training provider" %}

{% block pageNavigation %}
  {{ govukBackLink(backLink) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action="/search?filtering=true" method="post">
        {{ govukInput({
          label: {
            text: title,
            isPageHeading: true,
            classes: "govuk-label--l"
          },
          id: "q",
          name: "q",
          value: q
        }) }}

        {{ govukButton({
          text: "Find courses"
        }) }}
      </form>
    </div>
  </div>

{% endblock %}
