{{ appSearch({
  label: {
    text: "Search by provider name or code",
    classes: "govuk-label--s"
  },
  input: {
    id: "keywords",
    name: "keywords",
    value: keywords
  },
  action: actions.search.find,
  buttons: [{
    text: "Search",
    classes: "app-search__button"
  }],
  classes: "govuk-!-margin-bottom-4" if not keywords
}) }}

{% if data.keywords %}
  <p class="govuk-body govuk-!-margin-top-2 govuk-!-margin-bottom-4">
    <a class="govuk-link govuk-link--no-visited-state" href="{{ actions.search.remove }}">Clear search</a>
  </p>
{% endif %}
