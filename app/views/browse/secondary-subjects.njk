{% extends "_layouts/default.njk" %}

{% set title = "Find secondary teacher training courses" %}

{% block pageTitle %}
{{ "Error: " if errors }}{{ title + " - " if title }}{{ caption + " - " if caption }}{{ serviceName }} - GOV.UK
{% endblock %}

{% block pageNavigation %}

{% endblock %}

{% block content %}

  {% include "_includes/error-summary.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">
        {{ title }}
      </h1>

    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h2 class="govuk-heading-m">Subjects with bursaries or scholarships</h2>

      <p class="govuk-body">
        Teachers for these subjects are in demand. You could be eligible for a bursary (£24,000) or scholarship (£26,000) if you choose one of these courses.
      </p>

      <p class="govuk-body">
        If your scholarship or bursary does not cover your living expenses and course fees, you can apply for student loan as well.
      </p>

    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
          <h3 class="govuk-heading-s">Languages</h3>

          {% set languages = ['French','German','Italian','Japanese','Mandarin','Russian','Spanish'] %}

          <ul class="govuk-list">
            {% for language in languages %}
              <li>
                <a class="govuk-link" href="/browse/location">{{ language }}</a>
              </li>
            {% endfor %}
          </ul>

        </div>
        <div class="govuk-grid-column-one-half">
          <h3 class="govuk-heading-s">Science, maths and technology</h3>

          {% set stemSubjects = ['Biology','Chemistry','Physics','Maths','Design and technology','Computing'] %}

          <ul class="govuk-list">
            {% for subject in stemSubjects %}
              <li>
                <a class="govuk-link" href="/browse/location">{{ subject }}</a>
              </li>
            {% endfor %}
          </ul>

        </div>
      </div>

    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h2 class="govuk-heading-m govuk-!-margin-top-5">Other subjects</h2>

      <p class="govuk-body">
        You cannot get a bursary or scholarship for these subjects, but you can apply for a student loan.
      </p>

    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      {% set otherSubjects = ['Art and design','Business studies','Citizenship','Classics','Communication and media studies','Dance','Economics','English as a second language','Health and social care','History','Music','Physical education','Psychology','Religious education','Social sciences'] %}

      <ul class="govuk-list app-two-columns">
        {% for subject in otherSubjects %}
          <li>
            <a class="govuk-link" href="/browse/location">{{ subject }}</a>
          </li>
        {% endfor %}
      </ul>
      </ul>


    </div>
  </div>
{% endblock %}

{% block pageScripts %}

{% endblock %}
