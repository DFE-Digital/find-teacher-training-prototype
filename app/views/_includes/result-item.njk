<h2 class="govuk-heading-m govuk-!-margin-bottom-4">
  <a href="/course/{{ result.provider.code }}/{{ result.course.code }}" style="text-decoration: none">
    <span class="govuk-!-font-size-19">{{ result.provider.name }}</span><br />
    <span style="text-decoration: underline">{{ result.course.name }} ({{ result.course.code }})</span>
  </a>
</h2>
<dl class="govuk-list--description">
  <dt class="govuk-list--description__label">Course</dt>
  <dd>{{ result.course.summary }}</dd>
  <dt class="govuk-list--description__label">Locations</dt>
  <dd>
    <span class="govuk-list--description__hint">Placements</span>
    {{ areaName + ", " if areaName != result.provider.area }}{{ result.provider.area }}
    <span class="govuk-list--description__hint govuk-!-padding-top-2">University</span>
    {{ result.provider.area }}
  </dd>
  {% if result.course.accredited_body %}
    <dt class="govuk-list--description__label">Accredited body</dt>
    <dd>{{ result.course.accredited_body }}</dd>
  {% endif %}
  <dt class="govuk-list--description__label">Financial support</dt>
  <dd>{{ "Salary" if result.course.funding_type == "salary" else "Student finance if youâ€™re eligible" }}</dd>
  {% if vacancy != "true" %}
    <dt class="govuk-list--description__label">Vacancies</dt>
    <dd>{{ "Yes" if result.course.has_vacancies else "No" }}</dd>
  {% endif %}
</dl>
