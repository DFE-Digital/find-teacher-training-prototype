{% extends "_layouts/default.njk" %}

{% set title = "Teacher training courses" %}

{% block pageNavigation %}
  {{ govukBackLink({
    text: "Back to subjects",
    href: "/subject"
  }) if data.flags.filterSidebar }}
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-l govuk-!-margin-bottom-2">{{ title }}</h1>

  <p class="govuk-body-l">{{ resultsCount }} courses with training locations in the {{ areaName }} area</p>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
      {% if data.flags.filterSidebar %}
        {% include "_includes/filter-form.njk" %}
      {% else %}
        {% include "_includes/filter-sidebar.njk" %}
      {% endif %}
    </div>

    <div class="govuk-grid-column-two-thirds">
      {% if results | length > 0 %}
        <ul class="govuk-list search-results">
        {% for result in results %}
          <li>
            {% include "_includes/result-item.njk" %}
          </li>
        {% endfor %}
        </ul>
        {{ appPagination(pagination) }}
      {% else %}
        <h2 class="govuk-heading-m">There are no courses matching your&nbsp;search</h2>
        <p class="govuk-body">You can <a href="/start/">try another search</a>, for example by changing subject or location.</p>
      {% endif %}
    </div>
  </div>
{% endblock %}
