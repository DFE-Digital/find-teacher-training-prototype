{% extends "_layouts/default.njk" %}

{% set title %}
{{ course.name }} ({{ course.code }}) with {{ course.provider.name }}
{% endset %}

{% block pageNavigation %}
  {{ govukBackLink({
    text: "Back to search results",
    href: "/results"
  }) }}
{% endblock %}

{% block content %}
  {% include "_includes/nearing-end-of-cycle-banner.njk" %}

  <h1 class="govuk-heading-xl">
    <span class="govuk-heading-l govuk-!-margin-bottom-1">{{ course.provider.name }}</span>
    {{ course.name }} ({{ course.code }})
  </h1>

  {% include "_includes/courses/summary.njk" %}

  {% include "_includes/courses/contents.njk" %}

  {% include "_includes/courses/about-the-course.njk" %}

  {% include "_includes/courses/school-placements.njk" %}

  {% include "_includes/courses/entry-requirements.njk" %}

  {% if course.train_with_us or course.accredited_body_code %}
    {% include "_includes/courses/about-the-training-provider.njk" %}
  {% endif %}

  {% if course.salaried %}
    {% include "_includes/courses/salary.njk" %}
  {% endif %}

  {% include "_includes/courses/fees-and-financial-support.njk" %}

  {% if course.interview_process %}
    {% include "_includes/courses/interview-process.njk" %}
  {% endif %}

  {% include "_includes/courses/international-students.njk" %}

  {% if course.provider.train_with_disability %}
    {% include "_includes/courses/training-with-disabilities.njk" %}
  {% endif %}

  {% include "_includes/courses/contact-the-training-provider.njk" %}

  {% include "_includes/courses/support-and-advice.njk" %}

  <hr class="govuk-section-break govuk-section-break--visible govuk-section-break--l govuk-!-width-two-thirds">

  {% include "_includes/courses/apply-for-course.njk" %}

  {{ course | log }}
{% endblock %}
