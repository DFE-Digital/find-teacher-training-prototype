<form action="{{ actions.search.find }}" method="post" accept-charset="utf-8" novalidate>
  <input type="hidden" name="q" value="provider">

  {{ govukInput({
    id: "provider",
    name: "keywords",
    label: {
      text: "Search by provider name or code",
      classes: "govuk-label--m"
    },
    value: keywords,
    autocomplete: "off",
    formGroup: {
      classes: "govuk-!-margin-bottom-0"
    }
  }) }}

  <div id="provider-autocomplete" class="govuk-body"></div>

  <div class="govuk-button-group">

    {{ govukButton({
      text: "Search"
    }) }}

    {% if keywords %}
      <a class="govuk-link govuk-link--no-visited-state" href="{{ actions.search.remove }}">Clear search</a>
    {% endif %}

  </div>

</form>

