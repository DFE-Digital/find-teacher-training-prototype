{% if data.q == "location" %}
  <div class="app-search-results-header">
   <p class="govuk-body">Sorted by distance</p>
  </div>
{% elif data.q == "england" or userJourney in ["filter","search"] %}
  <div class="app-search-results-header">
    <form class="app-search-results-header__sort" action="/results" method="get" accept-charset="utf-8" novalidate>
      {{ govukSelect({
        id: "sortby",
        name: "sortBy",
        label: {
          text: "Sorted by",
          classes: "govuk-!-display-inline-block"
        },
        items: [{
          value: "2",
          text: "Course name (A-Z)",
          selected: (data.sortBy == "2")
        } if 1==0, {
          value: "3",
          text: "Course name (Z-A)",
          selected: (data.sortBy == "3")
        } if 1==0, {
          value: "0",
          text: "Training provider (A-Z)",
          selected: (data.sortBy == "0")
        }, {
          value: "1",
          text: "Training provider (Z-A)",
          selected: (data.sortBy == "1")
        }],
        attributes: {
          role: "listbox"
        }
      }) }}
      {{ govukButton({
        text: "Sort"
      }) }}
    </form>
  </div>
{% endif %}
