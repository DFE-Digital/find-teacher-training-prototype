{% if data.q == "location" %}
  <div class="app-search-results-header">
   <p class="govuk-body">Sorted by distance</p>
  </div>
{% elif data.q == "england" or userJourney in ["filter","search"] %}
  <div class="app-search-results-header">

    {{ appSortBy({
      action: "/results",
      select: {
        id: "sortby",
        name: "sortBy",
        label: {
          text: "Sorted by"
        },
        items: [{
          value: 0,
          text: "Course name (A to Z)",
          selected: (data.sortBy == 0)
        } if 1==0, {
          value: 1,
          text: "Course name (Z to A)",
          selected: (data.sortBy == 1)
        } if 1==0, {
          value: 2,
          text: "Training provider (A to Z)",
          selected: (data.sortBy == 2)
        }, {
          value: 3,
          text: "Training provider (Z to A)",
          selected: (data.sortBy == 3)
        }]
      },
      button: {
        text: "Sort"
      }
    }) }}

  </div>
{% endif %}
